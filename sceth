// НАСТРОЙКИ 
int r = 185; // угол поворота заслонки
int sp = 135; //угол закрытого состояния
int dp = 400; //время,на которое открывается заслонка
int d1 = 3000; //время от первого прикорма до второго
int d2 = 3000; //время от второго прикорма до тетьего
int d3 = 3000; //время от тетьего прикорма до четвёртого
int d4 = 3000; //время от четвёртого прикорма до следующего
//
#include <Servo.h>

#define servoPin 9 //пин, к которому подкючен сервопривод

Servo myservo;
void setup() //процедура setup

{
myservo.attach(servoPin); //привязываем привод к порту 9
}

void loop()

{
  
//начало цикла прикорма
myservo.write(r); //открываем заслонку
delay(dp); //по умолчанию 0.3 секунды (значение 300)
myservo.write(sp); //закрываем заслонку
delay(d1); //время до следующего прикорма
//конец цикла прикорма

//начало цикла прикорма
myservo.write(r); //открываем заслонку
delay(dp); //по умолчанию 0.3 секунды (значение 300)
myservo.write(sp); //закрываем заслонку
delay(d2); //время до следующего прикорма
//конец цикла прикорма

//начало цикла прикорма
myservo.write(r); //открываем заслонку
delay(dp); //по умолчанию 0.3 секунды (значение 300)
myservo.write(sp); //закрываем заслонку
delay(d3); //время до следующего прикорма
//конец цикла прикорма

//начало цикла прикорма
myservo.write(r); //открываем заслонку
delay(dp); //по умолчанию 0.3 секунды (значение 300)
myservo.write(sp); //закрываем заслонку
delay(d4); //время до следующего прикорма
//конец цикла прикорма

}
